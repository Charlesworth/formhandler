<html>

<body>
    <form action="http://{{ .Address }}" method="POST" enctype="multipart/form-data">

        <label for="text">text:</label>
        <input type="text" name="text" id="text" required>

        <br />
        <br />

        <label for="email">email:</label>
        <input type="email" name="email" id="email" required>

        <br />
        <br />

        <label for="textarea">textarea:</label>
        <textarea name="textarea" id="textarea" required></textarea>

        <br />
        <br />

        <label for="search">!!!search:</label>
        <input type="search" id="search" name="search" required>

        <br />
        <br />

        <label for="singleFile">file:</label>
        <input type="file" id="singleFile" name="singleFile" required>

        <br />
        <br />

        <label for="multiFile">"multi" file:</label>
        <input type="file" id="multiFile" name="multiFile" multiple required>

        <br />
        <br />

        <label for="tel">tel:</label>
        <input type="tel" id="tel" name="tel" required>

        <br />
        <br />

        <label for="url">url:</label>
        <input type="url" id="url" name="url" required>

        <br />
        <br />

        <label for="number">number:</label>
        <input type="number" name="number" id="number" min="0" max="1" step="0.01" required>

        <br />
        <br />

        <label for="range">!!!range:</label>
        <input type="range" name="range" id="range" min="50000" max="500000" step="100" value="250000">
        <output for="range"></output>

        <br />
        <br />

        <label for="datetime-local">datetime-local:</label>
        <input type="datetime-local" name="datetime-local" id="datetime-local" required>

        <br />
        <br />

        <label for="date">date:</label>
        <input type="date" id="date" name="date" min="2018-01-01" max="2018-12-31" required>

        <br />
        <br />

        <label for="month">month:</label>
        <input type="month" name="month" id="month" required>

        <br />
        <br />

        <label for="time">time:</label>
        <input type="time" name="time" id="time" required>

        <br />
        <br />

        <label for="week">week:</label>
        <input type="week" name="week" id="week" required>

        <br />
        <br />

        <label for="color">color:</label>
        <input type="color" name="color" id="color" required>

        <br />
        <br />

        <label for="drop-down">select drop-down:</label>
        <select id="drop-down" name="drop-down" required>
            <option>Banana</option>
            <option>Cherry</option>
            <option>Lemon</option>
        </select>

        <br />
        <br />

        <label for="drop-down-multi">select drop-down multi:</label>
        <select id="drop-down-multi" name="drop-down-multi" multiple required>
            <option>Banana</option>
            <option>Cherry</option>
            <option>Lemon</option>
        </select>

        <br />
        <br />

        <label for="password">password:</label>
        <input type="password" id="password" name="password" minlength="8">

        <br />
        <br />

        <label>radio:</label>
        <input type="radio" id="choice1" name="radio" value="email" checked>
        <label for="choice1">Email</label>
        <input type="radio" id="choice2" name="radio" value="phone">
        <label for="choice2">Phone</label>
        <input type="radio" id="choice3" name="radio" value="mail">
        <label for="choice3">Mail</label>

        <br />
        <br />

        <label>checkbox:</label>
        <input type="checkbox" id="coding" name="checkbox" value="coding">
        <label for="coding">Coding</label>
        <input type="checkbox" id="music" name="checkbox" value="music">
        <label for="music">Music</label>

        <br />
        <br />

        <input type="submit">
    </form>
</body>

</html>
